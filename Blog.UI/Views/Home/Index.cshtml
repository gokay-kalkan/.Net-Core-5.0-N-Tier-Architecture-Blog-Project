@{
    ViewData["Title"] = "Home Page";
}

@await Component.InvokeAsync("SliderBlog") 




<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @await Component.InvokeAsync("ThreeBlogList")

                        <div class="col-lg-12">
                            <div class="main-button">
                                <a asp-controller="Blog" asp-action="BlogList">Tüm Blogları Gör</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="sidebar-item search">
                                <form id="search_form" name="gs" method="GET" action="#">
                                    <input type="text" name="q" class="searchText" placeholder="type to search..." autocomplete="on">
                                </form>
                            </div>
                        </div>
                        @await Component.InvokeAsync("LastThreeBlog")
                        @await Component.InvokeAsync("CategoryList")

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>